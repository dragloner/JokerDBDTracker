<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ui="clr-namespace:JokerDBDTracker">
        <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0C121A" Offset="0"/>
            <GradientStop Color="#101926" Offset="0.45"/>
            <GradientStop Color="#162738" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#E4EEF6"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E4EEF6"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#8CB8D4"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#112233"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F1FAFF"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC183042" Offset="0"/>
                        <GradientStop Color="#CC224960" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#5E87A4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid ClipToBounds="False">
                            <Border x:Name="HoverPlate"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="22"
                                    SnapsToDevicePixels="True"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="12"
                                                      ShadowDepth="0"
                                                      Color="#67C8FF"
                                                      Opacity="0"/>
                                </Border.Effect>
                            </Border>
                            <Border Padding="{TemplateBinding Padding}"
                                    ClipToBounds="True"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="HoverPlate" Property="BorderBrush" Value="#88CFFF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="HoverPlate" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="HoverPlate" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="20"
                                                          ShadowDepth="0"
                                                          Color="#67C8FF"
                                                          Opacity="0.24"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="HoverPlate" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.988" ScaleY="0.988"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="HoverPlate" Property="Opacity" Value="0.94"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="HoverPlate" Property="Opacity" Value="0.55"/>
                            </Trigger>
                            <Trigger Property="ui:UiAnimation.IsEnabled" Value="False">
                                <Setter TargetName="HoverPlate" Property="Effect" Value="{x:Null}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Background" Value="#CC1A3447"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#5E88A5"/>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Setter Property="Background" Value="#CC5E2835"/>
            <Setter Property="BorderBrush" Value="#A86C79"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#EEF8FF"/>
            <Setter Property="Background" Value="#D5192633"/>
            <Setter Property="BorderBrush" Value="#577A92"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="MinHeight" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="TextElement.Foreground" Value="#EEF8FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid SnapsToDevicePixels="True">
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Border x:Name="PopupRoot"
                                        MinWidth="{Binding ActualWidth, ElementName=ComboRoot}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Margin="0,6,0,0"
                                        Background="#EA172534"
                                        BorderBrush="#5D86A4"
                                        BorderThickness="1"
                                        CornerRadius="12"
                                        SnapsToDevicePixels="True">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="16"
                                                          ShadowDepth="0"
                                                          Color="#0D1720"
                                                          Opacity="0.38"/>
                                    </Border.Effect>
                                    <Border Margin="3"
                                            Background="#1B2B39"
                                            CornerRadius="9">
                                        <ScrollViewer x:Name="DropDownScrollViewer"
                                                      Margin="1"
                                                      Padding="0"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </ScrollViewer>
                                    </Border>
                                </Border>
                            </Popup>

                            <Border x:Name="ComboRoot"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <Grid ClipToBounds="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="38"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="SelectionContent"
                                                      Grid.Column="0"
                                                      Margin="12,0,8,0"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      RecognizesAccessKey="True"
                                                      IsHitTestVisible="False"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"/>

                                    <TextBox x:Name="PART_EditableTextBox"
                                             Grid.Column="0"
                                             Margin="12,0,8,0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{TemplateBinding Foreground}"
                                             CaretBrush="{TemplateBinding Foreground}"
                                             HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                             VerticalContentAlignment="Center"
                                             IsReadOnly="{TemplateBinding IsReadOnly}"
                                             Visibility="Hidden"/>

                                    <ToggleButton x:Name="DropDownToggle"
                                                  Grid.ColumnSpan="2"
                                                  Focusable="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <Border x:Name="ArrowHost"
                                            Grid.Column="1"
                                            Margin="0"
                                            CornerRadius="0,12,12,0"
                                            Background="#1A2C3B"
                                            BorderBrush="#36576D"
                                            BorderThickness="1,0,0,0"
                                            IsHitTestVisible="False">
                                        <Path Width="10"
                                              Height="6"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Fill="#BFE2F8"
                                              Data="M 0 0 L 10 0 L 5 6 Z"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="SelectionContent" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="DropDownToggle" Property="Grid.Column" Value="1"/>
                                <Setter TargetName="DropDownToggle" Property="Grid.ColumnSpan" Value="1"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="False">
                                <Setter TargetName="PopupRoot" Property="MinHeight" Value="0"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#82BEE5"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#9CD7FF"/>
                                <Setter TargetName="ArrowHost" Property="BorderBrush" Value="#4F83A6"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#9CD7FF"/>
                                <Setter TargetName="ArrowHost" Property="Background" Value="#22384A"/>
                                <Setter TargetName="ArrowHost" Property="BorderBrush" Value="#5D8FB0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ComboRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#82BEE5"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#9CD7FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#EAF7FF"/>
            <Setter Property="Background" Value="#1D2A36"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemRoot"
                                Margin="2"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#24384A"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#6FAEDA"/>
                                <Setter Property="Foreground" Value="#F4FBFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#1D5A86"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#88CEFF"/>
                                <Setter Property="Foreground" Value="#F8FCFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ItemRoot" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#EEF8FF"/>
            <Setter Property="Background" Value="#D5192633"/>
            <Setter Property="BorderBrush" Value="#577A92"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#82BEE5"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#9CD7FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="#D8EAF8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#EAF6FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="VirtualizingPanel.ScrollUnit" Value="Pixel"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0"
                                      IsItemsHost="True"
                                      Margin="0,0,0,2"
                                      Background="Transparent"
                                      ClipToBounds="False"
                                      KeyboardNavigation.TabIndex="1"/>
                            <ContentPresenter Grid.Row="1"
                                              ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#E6F2FA"/>
            <Setter Property="Background" Value="#CC1B3346"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#557B96"
                                BorderThickness="1"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabRoot" Property="BorderBrush" Value="#83C4EA"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabRoot" Property="Background" Value="#F0213A4E"/>
                                <Setter TargetName="TabRoot" Property="BorderBrush" Value="#7AC6F1"/>
                                <Setter Property="Foreground" Value="#F2FBFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VideoItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemRoot"
                                Background="#D2172532"
                                BorderBrush="#4E728B"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#7ABFE9"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#E01D3141"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#91D1F7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AchievementItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="AchievementItemRoot"
                                Background="#CC2B3D4E"
                                BorderBrush="#6887A0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="AchievementItemRoot" Property="BorderBrush" Value="#95BCD7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="AchievementItemRoot" Property="BorderBrush" Value="#A7CBE1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrestigeButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#5D6B76"/>
            <Setter Property="Foreground" Value="#D6DEE5"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#2FA27E"/>
                    <Setter Property="Foreground" Value="#F4FFFB"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsEnabled" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#39BE93"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopNavButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="62"/>
            <Setter Property="MinHeight" Value="62"/>
            <Setter Property="MaxHeight" Value="62"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#CC1A3143" Offset="0"/>
                        <GradientStop Color="#CC21475C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="#EAF6FF"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#5E87A3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid ClipToBounds="False">
                            <Border x:Name="NavButtonRoot"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="24"
                                    SnapsToDevicePixels="True"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>
                            <Border Padding="{TemplateBinding Padding}"
                                    Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavButtonRoot" Property="BorderBrush" Value="#8CCEF7"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="NavButtonRoot" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.015" ScaleY="1.015"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="NavButtonRoot" Property="Background" Value="#E0182A38"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="#1D2B38"/>
            <Setter Property="BorderBrush" Value="#6F92AB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#69C5FF"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="11"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <Grid x:Name="PART_Track" Margin="2" ClipToBounds="True">
                                <Border CornerRadius="9" Background="#233646"/>
                                <Border x:Name="PART_Indicator"
                                        HorizontalAlignment="Left"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid SnapsToDevicePixels="True"
                              UseLayoutRounding="True">
                            <Border x:Name="ThumbGlow"
                                    Margin="-1"
                                    CornerRadius="6"
                                    Background="#2EBEEBFF"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                            <Border x:Name="ThumbBody"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BorderBrush="#92EFFFFF">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#E9FCFFFF" Offset="0"/>
                                        <GradientStop Color="#C8F0FCFF" Offset="0.45"/>
                                        <GradientStop Color="#A5DCF3FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border x:Name="ThumbGlass"
                                    Margin="1"
                                    CornerRadius="4"
                                    BorderThickness="1"
                                    BorderBrush="#28FFFFFF"
                                    Background="#14FFFFFF"
                                    IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#CBFAFFFF"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0.85"/>
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#F3FFFFFF"/>
                                <Setter TargetName="ThumbBody" Property="Opacity" Value="1"/>
                                <Setter TargetName="ThumbGlass" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ThumbBody" Property="Opacity" Value="0.35"/>
                                <Setter TargetName="ThumbGlass" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuestItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="QuestItemRoot"
                                Background="#CC2E4458"
                                BorderBrush="#7193AA"
                                BorderThickness="1"
                                CornerRadius="11"
                                Padding="8">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="QuestItemRoot" Property="BorderBrush" Value="#A2C6DE"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="QuestItemRoot" Property="BorderBrush" Value="#B8D9ED"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ClaimQuestButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2FA27E"/>
            <Setter Property="Foreground" Value="#F4FFFB"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#7AD8B8"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#546672"/>
                    <Setter Property="Foreground" Value="#C4D0D7"/>
                    <Setter Property="BorderBrush" Value="#6B7C87"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsEnabled" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#39BE93"/>
                    <Setter Property="BorderBrush" Value="#9CE9CB"/>
                </MultiTrigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsEnabled" Value="True"/>
                        <Condition Property="IsPressed" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#269873"/>
                    <Setter Property="BorderBrush" Value="#71C8A9"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="MinWidth" Value="18"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Opacity" Value="0.5"/>
            <Setter Property="IsHitTestVisible" Value="True"/>
            <Setter Property="ui:ScrollBarRevealBehavior.EnableAutoReveal" Value="True"/>
            <Setter Property="ui:ScrollBarRevealBehavior.RevealEdgeWidth" Value="42"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="ScrollRoot"
                              Margin="0"
                              Background="Transparent"
                              SnapsToDevicePixels="True"
                              UseLayoutRounding="True">
                            <Border x:Name="ScrollShell"
                                    Margin="1"
                                    CornerRadius="8"
                                    Background="#08121920"
                                    BorderThickness="1"
                                    BorderBrush="#1EFFFFFF"/>
                            <Border x:Name="ScrollRail"
                                    Margin="3,2,3,2"
                                    CornerRadius="6"
                                    Background="#3B101A23"
                                    BorderThickness="1"
                                    BorderBrush="#267EB0C8"/>
                            <Border x:Name="ScrollRailGlass"
                                    Margin="4,3,4,3"
                                    CornerRadius="5"
                                    Background="#12FFFFFF"
                                    Opacity="0.75"
                                    IsHitTestVisible="False"/>
                            <Border x:Name="ScrollRailGlow"
                                    Margin="2,1,2,1"
                                    CornerRadius="7"
                                    Background="#10BCEEFF"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                            <Track x:Name="PART_Track"
                                   Margin="2,1,2,1"
                                   Orientation="{TemplateBinding Orientation}"
                                   IsDirectionReversed="True"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="{TemplateBinding ViewportSize}"
                                   SnapsToDevicePixels="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{DynamicResource UnifiedScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{DynamicResource UnifiedScrollThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{DynamicResource UnifiedScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ScrollShell" Property="BorderBrush" Value="#36E6FAFF"/>
                                <Setter TargetName="ScrollRail" Property="BorderBrush" Value="#4AAEE0F3"/>
                                <Setter TargetName="ScrollRailGlass" Property="Opacity" Value="1"/>
                                <Setter TargetName="ScrollRailGlow" Property="Opacity" Value="0.55"/>
                            </Trigger>
                            <Trigger Property="IsMouseCaptureWithin" Value="True">
                                <Setter TargetName="ScrollShell" Property="BorderBrush" Value="#5AF0FFFF"/>
                                <Setter TargetName="ScrollRail" Property="BorderBrush" Value="#6CD2EEFF"/>
                                <Setter TargetName="ScrollRailGlow" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="ui:ScrollBarRevealBehavior.IsRevealActive" Value="True">
                    <Setter Property="Opacity" Value="0.98"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.98"/>
                </Trigger>
                <Trigger Property="IsMouseCaptureWithin" Value="True">
                    <Setter Property="Opacity" Value="1"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="Opacity" Value="0.94"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.16"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="UnifiedScrollThumbStyle"
               TargetType="Thumb"
               BasedOn="{StaticResource {x:Type Thumb}}"/>

        <Style x:Key="UnifiedScrollRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UnifiedScrollBarStyle"
               TargetType="ScrollBar"
               BasedOn="{StaticResource {x:Type ScrollBar}}"/>

</ResourceDictionary>
