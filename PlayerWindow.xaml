<Window x:Class="JokerDBDTracker.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="JokerDBD Tracker - Player"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#131B22"
        Icon="Assets/app.ico"
        FontFamily="Bahnschrift SemiCondensed">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F3FAFF"/>
            <Setter Property="Background" Value="#2F6B8A"/>
            <Setter Property="Padding" Value="16,9"/>
            <Setter Property="BorderBrush" Value="#6E91A9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="18"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="21"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Background" Value="#3A7EA1"/>
        </Style>

        <Style x:Key="EffectButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Background" Value="#2E5E7B"/>
        </Style>

        <Style x:Key="EffectCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#EAF5FF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="Root"
                                Background="#2A3D4E"
                                BorderBrush="#6887A0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Mark"
                                        Width="24"
                                        Height="24"
                                        CornerRadius="12"
                                        Background="#1B2A36"
                                        BorderBrush="#7B9BB2"
                                        BorderThickness="1">
                                    <TextBlock x:Name="MarkGlyph"
                                               Text=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="ExtraBold"
                                               FontSize="16"
                                               Foreground="#D8F5E8"/>
                                </Border>
                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#97BFD9"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#334B60"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#8CB8D4"/>
                                <Setter TargetName="Mark" Property="Background" Value="#2FA27E"/>
                                <Setter TargetName="Mark" Property="BorderBrush" Value="#95E7C9"/>
                                <Setter TargetName="MarkGlyph" Property="Text" Value="✔"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#CFEAFF"
                                BorderBrush="#9CC3DD"
                                BorderThickness="1"
                                CornerRadius="9">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="5" Opacity="0.25" Color="#000000"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthSliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Minimum" Value="0"/>
            <Setter Property="Maximum" Value="100"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="0,2,0,2">
                            <Track x:Name="PART_Track"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   IsDirectionReversed="False">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="#5AB7E9"
                                                  BorderThickness="0"
                                                  Height="10"
                                                  VerticalAlignment="Center"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource EffectStrengthThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="#1E3243"
                                                  BorderThickness="0"
                                                  Height="10"
                                                  VerticalAlignment="Center"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AppScrollThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="11"/>
            <Setter Property="Height" Value="110"/>
            <Setter Property="MinHeight" Value="110"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#91BDD9"
                                CornerRadius="6"
                                BorderBrush="#B8D5E7"
                                BorderThickness="1">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="6" Opacity="0.2" Color="#000000"/>
                            </Border.Effect>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#2A3D4E"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True">
                            <Border Background="#20313F" CornerRadius="7"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Orientation="{TemplateBinding Orientation}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="{TemplateBinding ViewportSize}">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="Transparent"
                                                  BorderThickness="0"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource AppScrollThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="Transparent"
                                                  BorderThickness="0"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="TopBarPanel"
                Grid.Row="0"
                Padding="12"
                Background="#213241"
                BorderBrush="#5F8099"
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0"
                        Content="Назад к списку"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"/>

                <Button x:Name="FullscreenButton"
                        Grid.Column="2"
                        Content="Полный экран"
                        Style="{StaticResource EffectButtonStyle}"
                        Click="FullscreenButton_Click"/>

                <Button x:Name="ToggleEffectsPanelButton"
                        Grid.Column="4"
                        Content="Скрыть эффекты"
                        Style="{StaticResource EffectButtonStyle}"
                        Click="ToggleEffectsPanelButton_Click"/>

                <TextBlock x:Name="VideoTitleText"
                           Grid.Column="5"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="#EDF7FF"
                           FontWeight="Bold"
                           FontSize="28"
                           TextTrimming="CharacterEllipsis"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition x:Name="EffectsColumn" Width="420"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#10171E" CornerRadius="8" Margin="8">
                <wv2:WebView2 x:Name="Player"/>
            </Border>

            <Border x:Name="EffectsPanel"
                    Grid.Column="2"
                    Margin="0,8,8,8"
                    Padding="12"
                    Background="#213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    CornerRadius="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Эффекты плеера"
                               Foreground="#EDF7FF"
                               FontWeight="Bold"
                               FontSize="30"/>

                    <TextBlock Grid.Row="1"
                               Margin="0,6,0,8"
                               Text="Включайте эффекты и настраивайте силу прямо под каждым эффектом."
                               TextWrapping="Wrap"
                               Foreground="#CFE3F1"
                               FontSize="18"/>

                    <Button Grid.Row="2"
                            Content="Сбросить все эффекты"
                            Style="{StaticResource EffectButtonStyle}"
                            Click="ResetEffectsButton_Click"/>

                    <ScrollViewer Grid.Row="4" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <CheckBox x:Name="Fx1" Content="1. Без цвета" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <CheckBox x:Name="Fx2" Content="2. Сепия" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <CheckBox x:Name="Fx3" Content="3. Инверсия" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>

                            <CheckBox x:Name="Fx4" Content="4. Высокий контраст" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx4Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="ContrastStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="55" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx5" Content="5. Затемнение" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx5Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="DarknessStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="45" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx6" Content="6. Насыщенность" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx6Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="SaturationStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="55" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx7" Content="7. Сдвиг оттенка" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx7Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="HueShiftStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="50" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx8" Content="8. Размытие" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx8Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="BlurStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="45" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx9" Content="9. Красное свечение" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx9Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="RedGlowStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="50" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx10" Content="10. VHS сканлайн" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx10Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="VhsStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="45" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx11" Content="11. Тряска кадра" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx11Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="ShakeStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="35" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx12" Content="12. Зеркало" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <CheckBox x:Name="Fx13" Content="13. Пикселизация" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>

                            <CheckBox x:Name="Fx14" Content="14. Холодный тон" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx14Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="ColdToneStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="40" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>

                            <CheckBox x:Name="Fx15" Content="15. Фиолетовое свечение" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx15Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Slider x:Name="VioletGlowStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="50" ValueChanged="StrengthSlider_ValueChanged"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>

