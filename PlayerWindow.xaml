<Window x:Class="JokerDBDTracker.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:JokerDBDTracker"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="JokerDBD Tracker - Player"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        Width="1480"
        Height="900"
        MinWidth="760"
        MinHeight="460"
        WindowStartupLocation="Manual"
        Background="#131B22"
        Icon="Assets/app.ico"
        FontFamily="Bahnschrift SemiCondensed">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            ResizeBorderThickness="12"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F3FAFF"/>
            <Setter Property="Background" Value="#CC193344"/>
            <Setter Property="Padding" Value="16,9"/>
            <Setter Property="BorderBrush" Value="#5C86A2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextBlock.TextWrapping" Value="NoWrap"/>
            <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid ClipToBounds="False">
                            <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="18"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>
                            <Border Background="Transparent"
                                    ClipToBounds="True"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#88CFFF"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.985" ScaleY="0.985"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.94"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="21"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Background" Value="#CC214C65"/>
        </Style>

        <Style x:Key="EffectButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Background" Value="#CC1C4055"/>
        </Style>

        <Style x:Key="PanelModeButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="34"/>
            <Setter Property="Background" Value="#C71B3548"/>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource EffectButtonStyle}">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Background" Value="#CC183548"/>
            <Setter Property="BorderBrush" Value="#5E88A5"/>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Setter Property="Background" Value="#CC5E2835"/>
            <Setter Property="BorderBrush" Value="#A86C79"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#EAF6FF"/>
            <Setter Property="Background" Value="#C9162533"/>
            <Setter Property="BorderBrush" Value="#5A85A1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
            <Setter Property="TextElement.Foreground" Value="#EAF6FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid SnapsToDevicePixels="True">
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   PlacementTarget="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                   Placement="Bottom"
                                   PopupAnimation="Slide">
                                <Border x:Name="PopupRoot"
                                        MinWidth="{Binding ActualWidth, ElementName=ComboRoot}"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        Margin="0,6,0,0"
                                        Background="#EF11202D"
                                        BorderBrush="#4F7894"
                                        BorderThickness="1"
                                        CornerRadius="12">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="14"
                                                          ShadowDepth="0"
                                                          Color="#05090D"
                                                          Opacity="0.42"/>
                                    </Border.Effect>
                                    <Border Margin="3"
                                            Background="#152736"
                                            CornerRadius="9">
                                        <ScrollViewer Margin="1"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      CanContentScroll="{TemplateBinding ScrollViewer.CanContentScroll}">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Border>
                            </Popup>

                            <Border x:Name="ComboRoot"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="12">
                                <Grid ClipToBounds="True">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="36"/>
                                    </Grid.ColumnDefinitions>

                                    <ContentPresenter x:Name="SelectionContent"
                                                      Grid.Column="0"
                                                      Margin="12,0,8,0"
                                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                      VerticalAlignment="Center"
                                                      Content="{TemplateBinding SelectionBoxItem}"
                                                      ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                                      TextElement.Foreground="{TemplateBinding Foreground}"
                                                      RecognizesAccessKey="True"
                                                      IsHitTestVisible="False"/>

                                    <TextBox x:Name="PART_EditableTextBox"
                                             Grid.Column="0"
                                             Margin="12,0,8,0"
                                             Background="Transparent"
                                             BorderThickness="0"
                                             Foreground="{TemplateBinding Foreground}"
                                             CaretBrush="{TemplateBinding Foreground}"
                                             HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                             VerticalContentAlignment="Center"
                                             IsReadOnly="{TemplateBinding IsReadOnly}"
                                             Visibility="Hidden"/>

                                    <ToggleButton x:Name="DropDownToggle"
                                                  Grid.ColumnSpan="2"
                                                  Focusable="False"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Border Background="Transparent"/>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <Border x:Name="ArrowHost"
                                            Grid.Column="1"
                                            CornerRadius="0,12,12,0"
                                            Background="#182C3D"
                                            BorderBrush="#345A72"
                                            BorderThickness="1,0,0,0"
                                            IsHitTestVisible="False">
                                        <Path Width="10"
                                              Height="6"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Fill="#C9E8FB"
                                              Data="M 0 0 L 10 0 L 5 6 Z"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEditable" Value="True">
                                <Setter TargetName="SelectionContent" Property="Visibility" Value="Hidden"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="DropDownToggle" Property="Grid.Column" Value="1"/>
                                <Setter TargetName="DropDownToggle" Property="Grid.ColumnSpan" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#86C6EC"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#9AD5FB"/>
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="ComboRoot" Property="BorderBrush" Value="#9AD5FB"/>
                                <Setter TargetName="ArrowHost" Property="Background" Value="#203A4F"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ComboRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#EAF7FF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="ItemRoot"
                                Margin="2"
                                Padding="{TemplateBinding Padding}"
                                CornerRadius="8"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsHighlighted" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#203646"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#6EAED6"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#1B4D71"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#84C8F1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ItemRoot" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#EAF6FF"/>
            <Setter Property="Background" Value="#C9162533"/>
            <Setter Property="BorderBrush" Value="#5A85A1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="#EAF6FF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="TextBoxRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <Border Padding="{TemplateBinding Padding}">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Background="Transparent"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TextBoxRoot" Property="BorderBrush" Value="#86C6EC"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="TextBoxRoot" Property="BorderBrush" Value="#9AD5FB"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="TextBoxRoot" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayerPanelTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid>
                            <Border
                                    Background="#96121B25"
                                    BorderBrush="#34546B"
                                    BorderThickness="1"
                                    CornerRadius="12"
                                    Padding="8">
                                <ContentPresenter ContentSource="SelectedContent"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayerPanelTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#E9F6FF"/>
            <Setter Property="Background" Value="#C9182E3F"/>
            <Setter Property="BorderBrush" Value="#4C738E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabRoot" Property="BorderBrush" Value="#88CFFF"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabRoot" Property="Background" Value="#E0223D50"/>
                                <Setter TargetName="TabRoot" Property="BorderBrush" Value="#7BC8F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#EAF5FF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="Root"
                                Background="#CC2A3D4E"
                                BorderBrush="#6887A0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Mark"
                                        Width="24"
                                        Height="24"
                                        CornerRadius="12"
                                        Background="#1B2A36"
                                        BorderBrush="#7B9BB2"
                                        BorderThickness="1">
                                    <TextBlock x:Name="MarkGlyph"
                                               Text=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="ExtraBold"
                                               FontSize="16"
                                               Foreground="#D8F5E8"/>
                                </Border>
                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#97BFD9"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#D7334B60"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#8CB8D4"/>
                                <Setter TargetName="Mark" Property="Background" Value="#2FA27E"/>
                                <Setter TargetName="Mark" Property="BorderBrush" Value="#95E7C9"/>
                                <Setter TargetName="MarkGlyph" Property="Text" Value="&#x2714;"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse x:Name="Knob"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="#F5FBFF"
                                 Stroke="#6EAED5"
                                 StrokeThickness="1.2"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Knob" Property="Stroke" Value="#8AC6EA"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="Knob" Property="Fill" Value="#FFFFFF"/>
                                <Setter TargetName="Knob" Property="Stroke" Value="#9DD3F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectSliderDecreaseButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border CornerRadius="5,0,0,5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#49ADDC" Offset="0"/>
                                    <GradientStop Color="#66BEEA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectSliderIncreaseButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border CornerRadius="0,5,5,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#B8D8EC" Offset="0"/>
                                    <GradientStop Color="#D2E8F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthSliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="IsMoveToPointEnabled" Value="True"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Minimum" Value="-1"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="0,2,0,2" VerticalAlignment="Center" UseLayoutRounding="True">
                            <Border x:Name="TrackRail"
                                    Height="10"
                                    VerticalAlignment="Center"
                                    CornerRadius="5"
                                    Background="#D0CFE4F2"
                                    BorderBrush="#93B8CE"
                                    BorderThickness="1"/>
                            <Track x:Name="PART_Track"
                                   Margin="1"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                    IsDirectionReversed="False"
                                    VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource EffectSliderDecreaseButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource EffectStrengthThumbStyle}" VerticalAlignment="Center"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource EffectSliderIncreaseButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackRail" Property="BorderBrush" Value="#B7D7EA"/>
                                <Setter TargetName="TrackRail" Property="Background" Value="#E0DAEDF9"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="TrackRail" Property="BorderBrush" Value="#C4E2F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AppScrollThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="MinHeight" Value="36"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Grid SnapsToDevicePixels="True"
                              UseLayoutRounding="True">
                            <Border x:Name="ThumbGlow"
                                    Margin="-1"
                                    CornerRadius="6"
                                    Background="#2EBEEBFF"
                                    Opacity="0"
                                    IsHitTestVisible="False"/>
                            <Border x:Name="ThumbBody"
                                    CornerRadius="5"
                                    BorderThickness="1"
                                    BorderBrush="#92EFFFFF">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#E9FCFFFF" Offset="0"/>
                                        <GradientStop Color="#C8F0FCFF" Offset="0.45"/>
                                        <GradientStop Color="#A5DCF3FF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                            <Border x:Name="ThumbGlass"
                                    Margin="1"
                                    CornerRadius="4"
                                    BorderThickness="1"
                                    BorderBrush="#28FFFFFF"
                                    Background="#14FFFFFF"
                                    IsHitTestVisible="False"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#CBFAFFFF"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0.85"/>
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#F3FFFFFF"/>
                                <Setter TargetName="ThumbGlass" Property="Background" Value="#22FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ThumbBody" Property="Opacity" Value="0.35"/>
                                <Setter TargetName="ThumbGlass" Property="Opacity" Value="0.2"/>
                                <Setter TargetName="ThumbGlow" Property="Opacity" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AppScrollRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
