<Window x:Class="JokerDBDTracker.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:JokerDBDTracker"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="JokerDBD Tracker - Player"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        Width="1480"
        Height="900"
        MinWidth="760"
        MinHeight="460"
        WindowStartupLocation="Manual"
        Background="#131B22"
        Icon="Assets/app.ico"
        FontFamily="Bahnschrift SemiCondensed">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            ResizeBorderThickness="12"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F3FAFF"/>
            <Setter Property="Background" Value="#C42F6B8A"/>
            <Setter Property="Padding" Value="16,9"/>
            <Setter Property="BorderBrush" Value="#6E91A9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
            <Setter Property="TextBlock.TextTrimming" Value="None"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid ClipToBounds="False">
                            <Border x:Name="Root"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="18"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                            </Border>
                            <Border Background="Transparent"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#9CC7E2"/>
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="1.02" ScaleY="1.02"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsPressed" Value="True"/>
                                    <Condition Property="ui:UiAnimation.IsEnabled" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Root" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.985" ScaleY="0.985"/>
                                    </Setter.Value>
                                </Setter>
                            </MultiTrigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Root" Property="Opacity" Value="0.94"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="21"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="Background" Value="#3A7EA1"/>
        </Style>

        <Style x:Key="EffectButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="Background" Value="#2E5E7B"/>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource EffectButtonStyle}">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Background" Value="#2B5D79"/>
            <Setter Property="BorderBrush" Value="#6D94AF"/>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Setter Property="Background" Value="#7D3A46"/>
            <Setter Property="BorderBrush" Value="#B77682"/>
        </Style>

        <Style x:Key="EffectCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="#EAF5FF"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border x:Name="Root"
                                Background="#CC2A3D4E"
                                BorderBrush="#6887A0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="{TemplateBinding Padding}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border x:Name="Mark"
                                        Width="24"
                                        Height="24"
                                        CornerRadius="12"
                                        Background="#1B2A36"
                                        BorderBrush="#7B9BB2"
                                        BorderThickness="1">
                                    <TextBlock x:Name="MarkGlyph"
                                               Text=""
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               FontWeight="ExtraBold"
                                               FontSize="16"
                                               Foreground="#D8F5E8"/>
                                </Border>
                                <ContentPresenter Grid.Column="2"
                                                  VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="BorderBrush" Value="#97BFD9"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#D7334B60"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#8CB8D4"/>
                                <Setter TargetName="Mark" Property="Background" Value="#2FA27E"/>
                                <Setter TargetName="Mark" Property="BorderBrush" Value="#95E7C9"/>
                                <Setter TargetName="MarkGlyph" Property="Text" Value="&#x2714;"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Ellipse x:Name="Knob"
                                 Width="{TemplateBinding Width}"
                                 Height="{TemplateBinding Height}"
                                 Fill="#F5FBFF"
                                 Stroke="#6EAED5"
                                 StrokeThickness="1.2"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Knob" Property="Stroke" Value="#8AC6EA"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="Knob" Property="Fill" Value="#FFFFFF"/>
                                <Setter TargetName="Knob" Property="Stroke" Value="#9DD3F2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectSliderDecreaseButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border CornerRadius="5,0,0,5">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#49ADDC" Offset="0"/>
                                    <GradientStop Color="#66BEEA" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectSliderIncreaseButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border CornerRadius="0,5,5,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#B8D8EC" Offset="0"/>
                                    <GradientStop Color="#D2E8F7" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EffectStrengthSliderStyle" TargetType="Slider">
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Height" Value="22"/>
            <Setter Property="IsMoveToPointEnabled" Value="False"/>
            <Setter Property="UseLayoutRounding" Value="True"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Minimum" Value="-1"/>
            <Setter Property="Maximum" Value="1"/>
            <Setter Property="Value" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid Margin="0,2,0,2" VerticalAlignment="Center" UseLayoutRounding="True">
                            <Border x:Name="TrackRail"
                                    Height="10"
                                    VerticalAlignment="Center"
                                    CornerRadius="5"
                                    Background="#D0CFE4F2"
                                    BorderBrush="#93B8CE"
                                    BorderThickness="1"/>
                            <Track x:Name="PART_Track"
                                   Margin="1"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                    IsDirectionReversed="False"
                                    VerticalAlignment="Center">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource EffectSliderDecreaseButtonStyle}"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource EffectStrengthThumbStyle}" VerticalAlignment="Center"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource EffectSliderIncreaseButtonStyle}"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TrackRail" Property="BorderBrush" Value="#B7D7EA"/>
                                <Setter TargetName="TrackRail" Property="Background" Value="#E0DAEDF9"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocusWithin" Value="True">
                                <Setter TargetName="TrackRail" Property="BorderBrush" Value="#C4E2F4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.45"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AppScrollThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="10"/>
            <Setter Property="MinHeight" Value="64"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBody"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#BEE3F8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#D18FD3F7" Offset="0"/>
                                    <GradientStop Color="#C469BDEB" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#D9F0FF"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#EAF7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AppScrollRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Background" Value="#C2213647"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Border Background="#C422384A" CornerRadius="9"/>
                            <Border Margin="4,3,4,3" Background="#CD172734" CornerRadius="6"/>
                            <Track x:Name="PART_Track"
                                   Orientation="{TemplateBinding Orientation}"
                                   IsDirectionReversed="True"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="{TemplateBinding ViewportSize}"
                                   Margin="4,3,4,3">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource AppScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource AppScrollThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource AppScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainRootGrid" Margin="8" MouseLeftButtonDown="MainRootGrid_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border x:Name="TopBarPanel"
                 Grid.Row="0"
                 Margin="0,4,0,8"
                 Padding="12,10"
                 Background="#C61F3040"
                 BorderBrush="#5F8099"
                 BorderThickness="1"
                 CornerRadius="14"
                 MouseLeftButtonDown="TopBarPanel_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="BackToListButton"
                        Grid.Column="0"
                        Content="Назад к списку"
                        Style="{StaticResource BackButtonStyle}"
                        Click="BackButton_Click"/>

                <Button x:Name="ToggleEffectsPanelButton"
                        Grid.Column="2"
                        Content="Скрыть эффекты"
                        Style="{StaticResource EffectButtonStyle}"
                        Click="ToggleEffectsPanelButton_Click"/>

                <TextBlock x:Name="VideoTitleText"
                           Grid.Column="3"
                           Margin="12,0,0,0"
                           VerticalAlignment="Center"
                           Foreground="#EDF7FF"
                           FontWeight="Bold"
                           FontSize="28"
                           TextTrimming="CharacterEllipsis"/>

                <Button Grid.Column="5"
                        Content="&#xE921;"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Click="MinimizeButton_Click"/>

                <Button x:Name="WindowSizeButton"
                        Grid.Column="7"
                        Content="&#xE922;"
                        Style="{StaticResource WindowControlButtonStyle}"
                        Click="ToggleWindowSizeButton_Click"/>

                <Button Grid.Column="9"
                        Content="&#xE8BB;"
                        Style="{StaticResource WindowCloseButtonStyle}"
                        Click="CloseWindowButton_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition x:Name="EffectsSplitterColumn" Width="10"/>
                <ColumnDefinition x:Name="EffectsColumn" Width="420"/>
            </Grid.ColumnDefinitions>

            <Border x:Name="PlayerHostBorder" Grid.Column="0" Background="#D010171E" CornerRadius="10" Margin="0,8,0,8">
                <Grid>
                    <Border x:Name="PlayerSurfaceHost" Background="#000000" Visibility="Collapsed">
                        <wv2:WebView2 x:Name="Player"/>
                    </Border>
                    <Border x:Name="PlayerLoadingOverlay"
                            Panel.ZIndex="20"
                            Background="#D50B1118"
                            Visibility="Visible"
                            IsHitTestVisible="True">
                        <Border Width="460"
                                Padding="2"
                                CornerRadius="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#86A7CEE6" Offset="0"/>
                                    <GradientStop Color="#5D6E93A8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border Padding="24"
                                    CornerRadius="16"
                                    Background="#D81E2D3B"
                                    BorderBrush="#5A8FB0C9"
                                    BorderThickness="1">
                                <StackPanel>
                                    <TextBlock x:Name="PlayerLoadingHeaderText"
                                               Text="Загрузка плеера"
                                               Foreground="#EDF7FF"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"/>
                                    <TextBlock x:Name="PlayerLoadingText"
                                               Margin="0,10,0,0"
                                               Text="Подготовка YouTube..."
                                               Foreground="#CFE3F1"
                                               FontSize="16"
                                               TextAlignment="Center"
                                               TextWrapping="Wrap"/>
                                    <ProgressBar Margin="0,14,0,0"
                                                 Height="14"
                                                 IsIndeterminate="True"/>
                                </StackPanel>
                            </Border>
                        </Border>
                    </Border>
                </Grid>
            </Border>

            <Border x:Name="EffectsPanel"
                    Grid.Column="2"
                    Margin="0,8,8,8"
                    Padding="12"
                    Background="#CC213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    CornerRadius="16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="EffectsHeaderText"
                               Grid.Row="0"
                               Text="Эффекты плеера"
                               Foreground="#EDF7FF"
                               FontWeight="Bold"
                               FontSize="30"/>

                    <StackPanel Grid.Row="1" Margin="0,6,0,8">
                        <TextBlock x:Name="EffectsHintText"
                                   Text="Включайте эффекты и настраивайте силу прямо под каждым эффектом."
                                   TextWrapping="Wrap"
                                   Foreground="#CFE3F1"
                                   FontSize="18"/>
                        <TextBlock x:Name="BindsHintText"
                                   Margin="0,4,0,0"
                                   Text="Эффекты: 1-0 и QWERT. Панель: H. Звуки: YUIO."
                                   TextWrapping="Wrap"
                                   Foreground="#8FC4E4"
                                   FontSize="14"/>
                    </StackPanel>

                    <Button x:Name="ResetEffectsButton"
                            Grid.Row="2"
                            Content="Сбросить все эффекты"
                            Style="{StaticResource EffectButtonStyle}"
                            Click="ResetEffectsButton_Click"/>

                    <UniformGrid Grid.Row="3"
                                 Margin="0,10,0,0"
                                 Rows="2"
                                 Columns="2">
                        <Button x:Name="AuraFarmSoundButton"
                                Margin="0,0,6,6"
                                Padding="12,8"
                                FontSize="14"
                                Content="1. Aura Farm Sound"
                                Click="AuraFarmSoundButton_Click"/>
                        <Button x:Name="LaughSoundButton"
                                Margin="6,0,0,6"
                                Padding="12,8"
                                FontSize="14"
                                Content="2. Laugh Sound"
                                Click="LaughSoundButton_Click"/>
                        <Button x:Name="PsiSoundButton"
                                Margin="0,6,6,0"
                                Padding="12,8"
                                FontSize="14"
                                Content="3. Psi Radiation"
                                Click="PsiSoundButton_Click"/>
                        <Button x:Name="RespectSoundButton"
                                Margin="6,6,0,0"
                                Padding="12,8"
                                FontSize="14"
                                Content="4. +Respect Don Mafia"
                                Click="RespectSoundButton_Click"/>
                    </UniformGrid>

                    <ScrollViewer Grid.Row="5" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <CheckBox x:Name="Fx1" Content="1. Без цвета" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <CheckBox x:Name="Fx2" Content="2. Сепия" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <CheckBox x:Name="Fx3" Content="3. Инверсия" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>

                            <CheckBox x:Name="Fx4" Content="4. Высокий контраст" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx4Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="64"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="ContrastStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="0" ValueChanged="StrengthSlider_ValueChanged"/>
                                    <TextBlock Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center" TextAlignment="Right" Foreground="#CFEAFF" FontSize="14" Text="{Binding ElementName=ContrastStrengthSlider, Path=Value, StringFormat={}{0:+0.00;-0.00;0.00}}"/>
                                </Grid>
                            </Border>

                            <CheckBox x:Name="Fx5" Content="5. Затемнение" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx5Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="64"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="DarknessStrengthSlider" Style="{StaticResource EffectStrengthSliderStyle}" Value="0" ValueChanged="StrengthSlider_ValueChanged"/>
                                    <TextBlock Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center" TextAlignment="Right" Foreground="#CFEAFF" FontSize="14" Text="{Binding ElementName=DarknessStrengthSlider, Path=Value, StringFormat={}{0:+0.00;-0.00;0.00}}"/>
                                </Grid>
                            </Border>

                            <CheckBox x:Name="Fx6" Content="6. Насыщенность" Style="{StaticResource EffectCheckBoxStyle}" Checked="EffectToggle_Changed" Unchecked="EffectToggle_Changed"/>
                            <Border x:Name="Fx6Details" Margin="44,-8,0,10" Padding="0,0,6,0" MaxHeight="0" Opacity="0" Visibility="Collapsed">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="64"/>
