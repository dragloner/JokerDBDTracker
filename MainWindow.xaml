<Window x:Class="JokerDBDTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="JokerDBD Tracker"
        Width="1500"
        Height="920"
        MinWidth="1060"
        MinHeight="640"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        Icon="Assets/app.ico"
        Background="#131B22"
        FontFamily="Bahnschrift SemiCondensed"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            ResizeBorderThickness="8"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <LinearGradientBrush x:Key="AppBackground" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A2630" Offset="0"/>
            <GradientStop Color="#203140" Offset="0.52"/>
            <GradientStop Color="#273C4E" Offset="1"/>
        </LinearGradientBrush>

        <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#E4EEF6"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="#E4EEF6"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#8CB8D4"/>
        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#112233"/>

        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#F3FAFF"/>
            <Setter Property="Background" Value="#2F6B8A"/>
            <Setter Property="Padding" Value="18,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="22"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="Background" Value="#2B5D79"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#6D94AF"/>
        </Style>

        <Style x:Key="WindowCloseButtonStyle" TargetType="Button" BasedOn="{StaticResource WindowControlButtonStyle}">
            <Setter Property="Background" Value="#7D3A46"/>
            <Setter Property="BorderBrush" Value="#B77682"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="#173041"/>
            <Setter Property="Background" Value="#E4EEF6"/>
            <Setter Property="BorderBrush" Value="#6E91A9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="#173041"/>
            <Setter Property="Background" Value="#F0F6FB"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="#173041"/>
            <Setter Property="Background" Value="#E4EEF6"/>
            <Setter Property="BorderBrush" Value="#6E91A9"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="VirtualizingPanel.IsVirtualizing" Value="True"/>
            <Setter Property="VirtualizingPanel.VirtualizationMode" Value="Recycling"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="True"/>
        </Style>

        <Style TargetType="TabControl">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabControl">
                        <Grid ClipToBounds="False">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TabPanel Grid.Row="0"
                                      IsItemsHost="True"
                                      Margin="0,0,0,2"
                                      Background="Transparent"
                                      ClipToBounds="False"
                                      KeyboardNavigation.TabIndex="1"/>
                            <ContentPresenter Grid.Row="1"
                                              ContentSource="SelectedContent"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#E6F2FA"/>
            <Setter Property="Background" Value="#2B4153"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="18,8"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="TabRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="#5E7F98"
                                BorderThickness="1"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TabRoot" Property="Background" Value="#E4EEF6"/>
                                <Setter TargetName="TabRoot" Property="BorderBrush" Value="#8FB4CD"/>
                                <Setter Property="Foreground" Value="#173041"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VideoItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="ItemRoot"
                                Background="#283847"
                                BorderBrush="#5E7F98"
                                BorderThickness="1"
                                CornerRadius="14"
                                Padding="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#95BCD7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemRoot" Property="Background" Value="#32485B"/>
                                <Setter TargetName="ItemRoot" Property="BorderBrush" Value="#A7CBE1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="AchievementItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="AchievementItemRoot"
                                Background="#2B3D4E"
                                BorderBrush="#6887A0"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="10">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="AchievementItemRoot" Property="BorderBrush" Value="#95BCD7"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="AchievementItemRoot" Property="BorderBrush" Value="#A7CBE1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrestigeButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#5D6B76"/>
            <Setter Property="Foreground" Value="#D6DEE5"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="True">
                    <Setter Property="Background" Value="#2FA27E"/>
                    <Setter Property="Foreground" Value="#F4FFFB"/>
                </Trigger>
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsEnabled" Value="True"/>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#39BE93"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="TopNavButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Height" Value="62"/>
            <Setter Property="MinHeight" Value="62"/>
            <Setter Property="MaxHeight" Value="62"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Background" Value="#2C4357"/>
            <Setter Property="Foreground" Value="#EAF6FF"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#6E91A9"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="NavButtonRoot"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="24"
                                SnapsToDevicePixels="True"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NavButtonRoot" Property="BorderBrush" Value="#A2C5DB"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="NavButtonRoot" Property="Background" Value="#22394C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ProgressBar">
            <Setter Property="Height" Value="22"/>
            <Setter Property="Background" Value="#1D2B38"/>
            <Setter Property="BorderBrush" Value="#6F92AB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#69C5FF"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="11"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <Grid x:Name="PART_Track" Margin="2" ClipToBounds="True">
                                <Border CornerRadius="9" Background="#233646"/>
                                <Border x:Name="PART_Indicator"
                                        HorizontalAlignment="Left"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Foreground}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="60"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Thumb">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="72"/>
            <Setter Property="MinHeight" Value="72"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border Background="#7FC8F1"
                                CornerRadius="7"
                                BorderBrush="#BEE2F8"
                                BorderThickness="1"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="#1F3241"/>
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True" Margin="0">
                            <Border Background="#1D2E3D" CornerRadius="9"/>
                            <Track x:Name="PART_Track"
                                   IsDirectionReversed="True"
                                   Orientation="{TemplateBinding Orientation}"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="NaN"
                                   Margin="2">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Background="Transparent"
                                                  BorderThickness="0"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Background="Transparent"
                                                  BorderThickness="0"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UnifiedScrollThumbStyle" TargetType="Thumb">
            <Setter Property="Width" Value="10"/>
            <Setter Property="MinHeight" Value="64"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="ThumbBody"
                                CornerRadius="6"
                                BorderThickness="1"
                                BorderBrush="#BEE3F8">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                    <GradientStop Color="#8FD3F7" Offset="0"/>
                                    <GradientStop Color="#69BDEB" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#D9F0FF"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="ThumbBody" Property="BorderBrush" Value="#EAF7FF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UnifiedScrollRepeatButtonStyle" TargetType="RepeatButton">
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RepeatButton">
                        <Border Background="Transparent"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="UnifiedScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Background" Value="#213647"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                            <Border Background="#22384A" CornerRadius="9"/>
                            <Border Margin="4,3,4,3" Background="#172734" CornerRadius="6"/>
                            <Track x:Name="PART_Track"
                                   Orientation="{TemplateBinding Orientation}"
                                   IsDirectionReversed="True"
                                   Minimum="{TemplateBinding Minimum}"
                                   Maximum="{TemplateBinding Maximum}"
                                   Value="{TemplateBinding Value}"
                                   ViewportSize="NaN"
                                   Margin="4,3,4,3">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource UnifiedScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageUpCommand"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource UnifiedScrollThumbStyle}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Style="{StaticResource UnifiedScrollRepeatButtonStyle}"
                                                  Command="ScrollBar.PageDownCommand"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Setter Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border x:Name="MainRootBorder"
            Margin="14"
            Padding="14"
            Background="{StaticResource AppBackground}"
            CornerRadius="26"
            MouseLeftButtonDown="MainRootBorder_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="18"
                    CornerRadius="18"
                    Background="#213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    MouseLeftButtonDown="TopHeaderBorder_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="JokerDBD Tracker"
                                   Foreground="#EDF7FF"
                                   FontSize="44"
                                   FontWeight="ExtraBold"/>
                        <StackPanel Margin="3,-2,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="AppVersionText"
                                       Text="v1.1.0.1"
                                       Foreground="#B9CFDF"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="UpdateStatusText"
                                       Margin="12,0,0,0"
                                       Text="● Проверка обновлений..."
                                       Foreground="#E2C17A"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="UpdateProgramButton"
                                    Margin="12,0,0,0"
                                    Padding="10,4"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Content="Обновить программу"
                                    Visibility="Collapsed"
                                    Click="UpdateProgramButton_Click"/>
                            <Button x:Name="RestartProgramButton"
                                    Margin="8,0,0,0"
                                    Padding="10,4"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Content="Перезапустить программу"
                                    Visibility="Collapsed"
                                    Click="RestartProgramButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Margin="8,0,0,0"
                            CornerRadius="22"
                            BorderBrush="#6E91A9"
                            BorderThickness="1"
                            Background="#E4EEF6"
                            Height="50"
                            VerticalAlignment="Center">
                        <Grid>
                            <TextBox x:Name="SearchBox"
                                     VerticalAlignment="Center"
                                     FontSize="20"
                                     FontWeight="SemiBold"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextChanged="SearchBox_TextChanged"/>
                        <TextBlock Text="Поиск стримов..."
                                   Foreground="#6A8294"
                                    FontWeight="Bold"
                                   FontSize="18"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=SearchBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        </Grid>
                    </Border>

                    <ComboBox x:Name="SortModeBox"
                              Grid.Column="2"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"
                              SelectionChanged="SortModeBox_SelectionChanged"
                              SelectedIndex="1">
                        <ComboBoxItem Tag="watched_oldest" Content="Сначала старые просмотры"/>
                        <ComboBoxItem Tag="watched_recent" Content="Сначала новые просмотры"/>
                        <ComboBoxItem Tag="channel" Content="По порядку канала"/>
                    </ComboBox>

                    <StackPanel Grid.Column="4"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button x:Name="MainMinimizeButton"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE921;"
                                Click="MainMinimizeButton_Click"/>
                        <Button x:Name="MainWindowSizeButton"
                                Margin="8,0,0,0"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE922;"
                                Click="MainWindowSizeButton_Click"/>
                        <Button x:Name="MainCloseButton"
                                Margin="8,0,0,0"
                                Style="{StaticResource WindowCloseButtonStyle}"
                                Content="&#xE8BB;"
                                Click="MainCloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,2,0,0" Height="62">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="HomeNavButton"
                        Grid.Column="0"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Главная"
                        Click="HomeNavButton_Click"/>
                <Button x:Name="FavoritesNavButton"
                        Grid.Column="2"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Избранное"
                        Click="FavoritesNavButton_Click"/>
                <Button x:Name="ProfileNavButton"
                        Grid.Column="4"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Профиль"
                        Click="ProfileNavButton_Click"/>
                <Button x:Name="SettingsNavButton"
                        Grid.Column="6"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Настройки"
                        Click="SettingsNavButton_Click"/>
            </Grid>

            <TabControl x:Name="TopTabControl"
                        Grid.Row="2"
                        Margin="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        SelectionChanged="TopTabControl_SelectionChanged">
                <TabItem Header="Главная"/>
                <TabItem Header="Избранное"/>
                <TabItem Header="Профиль"/>
                <TabItem Header="Настройки"/>
            </TabControl>

            <Grid Grid.Row="4" Grid.RowSpan="3" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="RecommendationsColumn" Width="420"/>
                    <ColumnDefinition x:Name="MainColumnsSpacer" Width="12"/>
                    <ColumnDefinition x:Name="StreamsColumn" Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="HomeSummaryPanel"
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Padding="12"
                        CornerRadius="16"
                        Background="#213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Обзор главной" Foreground="#EDF7FF" FontSize="22" FontWeight="Bold"/>
                        <TextBlock x:Name="HomeStatsText"
                                   Foreground="#D5E6F3"
                                   FontSize="17"
                                   Margin="0,6,0,0"/>
                        <TextBlock x:Name="HomeHintText"
                                   Foreground="#BFD8EA"
                                   FontSize="15"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border x:Name="StreamsPanel"
                        Grid.Row="2"
                        Grid.Column="2"
                        Padding="10"
                        CornerRadius="18"
                        Background="#213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <ListBox x:Name="VideoList"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="True"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ItemContainerStyle="{StaticResource VideoItemStyle}"
                             SelectionChanged="VideoList_SelectionChanged">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="180"
                                            Height="102"
                                            CornerRadius="8"
                                            Background="#34485A"
                                            ClipToBounds="True"
                                            VerticalAlignment="Top">
                                        <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" Margin="0,0,6,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Foreground="#F5EDE8"
                                                   FontWeight="Bold"
                                                   FontSize="24"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding PublishedAtText}"
                                                   Foreground="#EAD0BF"
                                                   FontSize="18"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding LastViewedText}"
                                                   Foreground="#C9A1A5"
                                                   FontSize="18"
                                                   Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding ResumeText}"
                                                   Foreground="#D7B8BC"
                                                   FontSize="17"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="3"
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            FontSize="17"
                                            FontWeight="Bold"
                                            Background="#554145"
                                            Foreground="#FFD45A"
                                            Content="{Binding FavoriteGlyph}"
                                            Tag="{Binding VideoId}"
                                            ToolTip="Переключить избранное"
                                            Click="ToggleFavoriteButton_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Border x:Name="RecommendationsPanel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="12"
                        CornerRadius="18"
                        Background="#213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Рекомендации" Foreground="#EDF7FF" FontWeight="Bold" FontSize="24"/>
                        <ListBox x:Name="RecommendationsList"
                                 Grid.Row="1"
                                  Margin="0,8,0,0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Foreground="#EAD0BF"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                  ItemContainerStyle="{StaticResource VideoItemStyle}"
                                  SelectionChanged="RecommendationsList_SelectionChanged">
                            <ListBox.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="130"
                                                Height="74"
                                                CornerRadius="8"
                                                Background="#34485A"
                                                ClipToBounds="True"
                                                VerticalAlignment="Top">
                                            <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="2" Margin="0,0,4,0">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="#F5EDE8"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding PublishedAtText}"
                                                       Foreground="#EAD0BF"
                                                       FontSize="14"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <Border x:Name="ProfilePanel"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Padding="14"
                    CornerRadius="18"
                    Background="#213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#2A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                        <StackPanel>
                            <TextBlock Text="Профиль" Foreground="#EDF7FF" FontWeight="Bold" FontSize="28"/>
                            <Grid Margin="0,8,0,0" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Width="86" Height="86">
                                    <Border Background="#365066"
                                            BorderBrush="#7FA6C0"
                                            BorderThickness="2"
                                            CornerRadius="43"
                                            ClipToBounds="True">
                                        <Image x:Name="PrestigeIconImage" Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock x:Name="PrestigeValueText"
                                               FontSize="28"
                                               FontWeight="ExtraBold"
                                               Foreground="#FFF5D8"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock x:Name="ProfileLevelText" Foreground="#EAD0BF" FontSize="22" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBlock x:Name="ProfileXpText" Foreground="#D7B8BC" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="ProfileStreakText" Foreground="#F1C98E" FontSize="18" FontWeight="Bold" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="ProfileTodayText" Foreground="#D8EAF8" FontSize="16" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                            <ProgressBar x:Name="ProfileXpProgress" Margin="0,10,0,0" Height="22" Minimum="0"/>
                            <Button x:Name="PrestigeButton"
                                    Style="{StaticResource PrestigeButtonStyle}"
                                    Margin="0,10,0,0"
                                    Width="190"
                                    Height="44"
                                    Content="Престиж"
                                    Click="PrestigeButton_Click"/>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#2A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Достижения" Foreground="#EDF7FF" FontWeight="Bold" FontSize="26"/>
                                <ListBox x:Name="AchievementsList"
                                          Grid.Row="1"
                                          Margin="0,10,0,0"
                                          Background="Transparent"
                                          Foreground="#EAD0BF"
                                          BorderThickness="0"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.CanContentScroll="True"
                                           VirtualizingPanel.IsVirtualizing="True"
                                           VirtualizingPanel.VirtualizationMode="Recycling"
                                           ItemContainerStyle="{StaticResource AchievementItemStyle}"
                                           ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="44"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="40"
                                                        Height="40"
                                                        CornerRadius="20"
                                                        BorderBrush="#8AAAC0"
                                                        BorderThickness="1"
                                                        Background="#3A5468">
                                                    <TextBlock x:Name="AchievementGlyph"
                                                               Text="○"
                                                               FontSize="24"
                                                               FontWeight="Bold"
                                                               Foreground="#D6E8F5"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="#F2FAFF"
                                                               FontWeight="Bold"
                                                               FontSize="20"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="#D2E3EF"
                                                               FontSize="15"
                                                               Margin="0,2,0,0"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                    <Setter TargetName="AchievementGlyph" Property="Text" Value="✔"/>
                                                    <Setter TargetName="AchievementGlyph" Property="Foreground" Value="#82EDB9"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Background="#2A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                            <StackPanel>
                                <TextBlock Text="Последние просмотренные" Foreground="#EDF7FF" FontWeight="Bold" FontSize="26"/>
                                <ListBox x:Name="RecentStreamsList"
                                         Margin="0,10,0,0"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#EAD0BF"
                                         FontSize="18"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.CanContentScroll="True"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ItemContainerStyle="{StaticResource VideoItemStyle}"
                                         SelectionChanged="RecentStreamsList_SelectionChanged">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Width="120"
                                                        Height="68"
                                                        CornerRadius="8"
                                                        Background="#34485A"
                                                        ClipToBounds="True"
                                                        VerticalAlignment="Top">
                                                    <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                                </Border>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="#F2FAFF"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding LastViewedText}"
                                                               Foreground="#C3DBEA"
                                                               FontSize="13"
                                                               Margin="0,3,0,0"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <Border x:Name="SettingsPanel"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Padding="14"
                    CornerRadius="18"
                    Background="#213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Настройки"
                               Foreground="#EDF7FF"
                               FontSize="30"
                               FontWeight="Bold"/>

                    <Border Grid.Row="2"
                            CornerRadius="14"
                            Background="#2A3D4E"
                            BorderBrush="#6887A0"
                            BorderThickness="1"
                            Padding="14">
                        <StackPanel>
                            <TextBlock Text="Раздел в разработке"
                                       Foreground="#F2FAFF"
                                       FontSize="22"
                                       FontWeight="Bold"/>
                            <TextBlock Margin="0,8,0,0"
                                       Text="Здесь появятся параметры приложения: автозапуск, язык, масштаб интерфейса, поведение fullscreen и сброс кеша."
                                       Foreground="#CFE3F1"
                                       FontSize="17"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <TextBlock x:Name="StatusText" Grid.Row="8" Visibility="Collapsed"/>

            <Grid x:Name="LoadingOverlay"
                  Grid.RowSpan="9"
                  Panel.ZIndex="1000"
                  Background="#40131B22">
                <Image x:Name="LoadingBackgroundImage"
                       Stretch="UniformToFill"
                       Opacity="1.0"/>
                <Border Background="#4A131B22"/>
                <Border Width="560"
                        Padding="28"
                        CornerRadius="20"
                        Background="#223747"
                        BorderBrush="#6E91A9"
                        BorderThickness="1.2"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                    <StackPanel>
                        <TextBlock Text="JokerDBD Tracker"
                                   Foreground="#EDF7FF"
                                   FontSize="34"
                                   FontWeight="ExtraBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Загрузка приложения"
                                   Margin="0,8,0,0"
                                   Foreground="#D1E3F2"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                         <TextBlock x:Name="LoadingStatusText"
                                    Margin="0,12,0,0"
                                    Foreground="#BED6E7"
                                    FontSize="16"
                                    TextAlignment="Center"
                                    TextWrapping="Wrap"
                                    Text=""/>
                        <ProgressBar Margin="0,18,0,0"
                                     x:Name="LoadingProgressBar"
                                     Height="18"
                                     IsIndeterminate="True"/>
                        <TextBlock x:Name="LoadingProgressText"
                                   Margin="0,8,0,0"
                                   Foreground="#C9DEED"
                                   FontSize="14"
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>




