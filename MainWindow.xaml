                                                        Padding="10,6"
                                                        Content="Назначить"
                                                        Tag="aura_farm"
                                                        Click="AssignBindButton_Click"/>
                                            </Grid>

                                            <Grid Margin="0,8,0,0">
                                                <Grid.ColumnDefinitions>
