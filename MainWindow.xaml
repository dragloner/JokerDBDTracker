<Window x:Class="JokerDBDTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Title="JokerDBD Tracker"
        Width="1500"
        Height="920"
        MinWidth="1060"
        MinHeight="640"
        WindowState="Maximized"
        WindowStyle="None"
        ResizeMode="CanResize"
        Icon="Assets/app.ico"
        Background="#131B22"
        FontFamily="Bahnschrift SemiCondensed"
        UseLayoutRounding="True"
        SnapsToDevicePixels="True">

    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome CaptionHeight="0"
                            ResizeBorderThickness="8"
                            CornerRadius="0"
                            GlassFrameThickness="0"
                            UseAeroCaptionButtons="False"/>
    </shell:WindowChrome.WindowChrome>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/MainWindow.Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border x:Name="MainRootBorder"
            Margin="14"
            Padding="14"
            Background="{StaticResource AppBackground}"
            CornerRadius="26"
            MouseLeftButtonDown="MainRootBorder_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="0"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0"
                    Padding="18"
                    CornerRadius="18"
                    Background="#CC213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    MouseLeftButtonDown="TopHeaderBorder_MouseLeftButtonDown">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="260"/>
                        <ColumnDefinition Width="12"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="JokerDBD Tracker"
                                   Foreground="#EDF7FF"
                                   FontSize="44"
                                   FontWeight="ExtraBold"/>
                        <StackPanel Margin="3,-2,0,0" Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock x:Name="AppVersionText"
                                       Text="v1.2.1.1"
                                       Foreground="#B9CFDF"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="UpdateStatusText"
                                       Margin="12,0,0,0"
                                       Text="● Проверка обновлений..."
                                       Foreground="#E2C17A"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <Button x:Name="UpdateProgramButton"
                                    Margin="12,0,0,0"
                                    Padding="10,4"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Content="Обновить программу"
                                    Visibility="Collapsed"
                                    Click="UpdateProgramButton_Click"/>
                            <Button x:Name="RestartProgramButton"
                                    Margin="8,0,0,0"
                                    Padding="10,4"
                                    FontSize="13"
                                    FontWeight="Bold"
                                    Content="Перезапустить программу"
                                    Visibility="Collapsed"
                                    Click="RestartProgramButton_Click"/>
                        </StackPanel>
                    </StackPanel>

                    <Border Grid.Column="1"
                            Margin="8,0,0,0"
                            CornerRadius="22"
                            BorderBrush="#6E91A9"
                            BorderThickness="1"
                            Background="#E6E4EEF6"
                            Height="50"
                            VerticalAlignment="Center">
                        <Grid>
                            <TextBox x:Name="SearchBox"
                                     VerticalAlignment="Center"
                                     FontSize="20"
                                     FontWeight="SemiBold"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     TextChanged="SearchBox_TextChanged"/>
                        <TextBlock x:Name="SearchPlaceholderText" Text="Поиск стримов..."
                                    Foreground="#6A8294"
                                    FontWeight="Bold"
                                   FontSize="18"
                                   IsHitTestVisible="False"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <MultiDataTrigger>
                                            <MultiDataTrigger.Conditions>
                                                <Condition Binding="{Binding Text, ElementName=SearchBox}" Value=""/>
                                                <Condition Binding="{Binding IsKeyboardFocused, ElementName=SearchBox}" Value="False"/>
                                            </MultiDataTrigger.Conditions>
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </MultiDataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                        </Grid>
                    </Border>

                    <ComboBox x:Name="SortModeBox"
                              Grid.Column="2"
                              Margin="8,0,0,0"
                              VerticalAlignment="Center"
                              SelectionChanged="SortModeBox_SelectionChanged"
                              SelectedIndex="1">
                        <ComboBoxItem x:Name="SortWatchedOldestItem" Tag="watched_oldest" Content="Сначала старые просмотры"/>
                        <ComboBoxItem x:Name="SortWatchedRecentItem" Tag="watched_recent" Content="Сначала новые просмотры"/>
                        <ComboBoxItem x:Name="SortChannelOrderItem" Tag="channel" Content="По порядку канала"/>
                    </ComboBox>

                    <StackPanel Grid.Column="4"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button x:Name="MainMinimizeButton"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE921;"
                                Click="MainMinimizeButton_Click"/>
                        <Button x:Name="MainWindowSizeButton"
                                Margin="8,0,0,0"
                                Style="{StaticResource WindowControlButtonStyle}"
                                Content="&#xE922;"
                                Click="MainWindowSizeButton_Click"/>
                        <Button x:Name="MainCloseButton"
                                Margin="8,0,0,0"
                                Style="{StaticResource WindowCloseButtonStyle}"
                                Content="&#xE8BB;"
                                Click="MainCloseButton_Click"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Row="2" Margin="0,2,0,0" Height="62">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="12"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="HomeNavButton"
                        Grid.Column="0"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Главная"
                        Click="HomeNavButton_Click"/>
                <Button x:Name="FavoritesNavButton"
                        Grid.Column="2"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Избранное"
                        Click="FavoritesNavButton_Click"/>
                <Button x:Name="ProfileNavButton"
                        Grid.Column="4"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Профиль"
                        Click="ProfileNavButton_Click"/>
                <Button x:Name="SettingsNavButton"
                        Grid.Column="6"
                        Style="{StaticResource TopNavButtonStyle}"
                        Content="Настройки"
                        Click="SettingsNavButton_Click"/>
            </Grid>

            <TabControl x:Name="TopTabControl"
                        Grid.Row="2"
                        Margin="0"
                        Background="Transparent"
                        BorderThickness="0"
                        Visibility="Collapsed"
                        SelectionChanged="TopTabControl_SelectionChanged">
                <TabItem Header="Главная"/>
                <TabItem Header="Избранное"/>
                <TabItem Header="Профиль"/>
                <TabItem Header="Задания"/>
                <TabItem Header="Настройки"/>
            </TabControl>

            <Grid Grid.Row="4" Grid.RowSpan="3" Margin="0,10,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="RecommendationsColumn" Width="420"/>
                    <ColumnDefinition x:Name="MainColumnsSpacer" Width="12"/>
                    <ColumnDefinition x:Name="StreamsColumn" Width="*"/>
                </Grid.ColumnDefinitions>

                <Border x:Name="HomeSummaryPanel"
                        Grid.Row="0"
                        Grid.ColumnSpan="3"
                        Padding="12"
                        CornerRadius="16"
                        Background="#CC213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock x:Name="HomeOverviewHeaderText"
                                   Text="Обзор главной"
                                   Foreground="#EDF7FF"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <TextBlock x:Name="HomeStatsText"
                                   Foreground="#D5E6F3"
                                   FontSize="17"
                                   Margin="0,6,0,0"/>
                        <TextBlock x:Name="HomeHintText"
                                   Foreground="#BFD8EA"
                                   FontSize="15"
                                   Margin="0,4,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <Border x:Name="StreamsPanel"
                        Grid.Row="2"
                        Grid.Column="2"
                        Padding="10"
                        CornerRadius="18"
                        Background="#CC213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <ListBox x:Name="VideoList"
                             Background="Transparent"
                             BorderThickness="0"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.CanContentScroll="True"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ItemContainerStyle="{StaticResource VideoItemStyle}"
                             SelectionChanged="VideoList_SelectionChanged">
                        <ListBox.Resources>
                            <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                        </ListBox.Resources>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition Width="12"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="40"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Width="180"
                                            Height="102"
                                            CornerRadius="8"
                                            Background="#C334485A"
                                            ClipToBounds="True"
                                            VerticalAlignment="Top">
                                        <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                    </Border>

                                    <StackPanel Grid.Column="2" Margin="0,0,6,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Foreground="#F5EDE8"
                                                   FontWeight="Bold"
                                                   FontSize="24"
                                                   TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding PublishedAtText}"
                                                   Foreground="#EAD0BF"
                                                   FontSize="18"
                                                   Margin="0,6,0,0"/>
                                        <TextBlock Text="{Binding LastViewedText}"
                                                   Foreground="#C9A1A5"
                                                   FontSize="18"
                                                   Margin="0,3,0,0"/>
                                        <TextBlock Text="{Binding ResumeText}"
                                                   Foreground="#D7B8BC"
                                                   FontSize="17"
                                                   Margin="0,3,0,0"/>
                                    </StackPanel>

                                    <Button Grid.Column="3"
                                            Width="30"
                                            Height="30"
                                            Padding="0"
                                            FontSize="17"
                                            FontWeight="Bold"
                                            Background="#D0554145"
                                            Foreground="#FFD45A"
                                            Content="{Binding FavoriteGlyph}"
                                            Tag="{Binding VideoId}"
                                            ToolTip="Переключить избранное"
                                            Click="ToggleFavoriteButton_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Border x:Name="RecommendationsPanel"
                        Grid.Row="2"
                        Grid.Column="0"
                        Padding="12"
                        CornerRadius="18"
                        Background="#CC213241"
                        BorderBrush="#5F8099"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="RecommendationsHeaderText"
                                   Grid.Row="0"
                                   Text="Рекомендации"
                                   Foreground="#EDF7FF"
                                   FontWeight="Bold"
                                   FontSize="24"/>
                        <ListBox x:Name="RecommendationsList"
                                 Grid.Row="1"
                                  Margin="0,8,0,0"
                                  BorderThickness="0"
                                  Background="Transparent"
                                  Foreground="#EAD0BF"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.CanContentScroll="True"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                  ItemContainerStyle="{StaticResource VideoItemStyle}"
                                  SelectionChanged="RecommendationsList_SelectionChanged">
                            <ListBox.Resources>
                                <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                            </ListBox.Resources>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="130"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Width="130"
                                                Height="74"
                                                CornerRadius="8"
                                                Background="#C334485A"
                                                ClipToBounds="True"
                                                VerticalAlignment="Top">
                                            <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                        </Border>

                                        <StackPanel Grid.Column="2" Margin="0,0,4,0">
                                            <TextBlock Text="{Binding Title}"
                                                       Foreground="#F5EDE8"
                                                       FontWeight="Bold"
                                                       FontSize="16"
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding PublishedAtText}"
                                                       Foreground="#EAD0BF"
                                                       FontSize="14"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <Border x:Name="ProfilePanel"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Padding="14"
                    CornerRadius="18"
                    Background="#CC213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="14"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#C82A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                        <StackPanel>
                            <TextBlock x:Name="ProfileHeaderText" Text="Профиль" Foreground="#EDF7FF" FontWeight="Bold" FontSize="28"/>
                            <Grid Margin="0,8,0,0" HorizontalAlignment="Left">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Grid Width="86" Height="86">
                                    <Border Background="#365066"
                                            BorderBrush="#7FA6C0"
                                            BorderThickness="2"
                                            CornerRadius="43"
                                            ClipToBounds="True">
                                        <Image x:Name="PrestigeIconImage" Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock x:Name="PrestigeValueText"
                                               FontSize="28"
                                               FontWeight="ExtraBold"
                                               Foreground="#FFF5D8"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Grid>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock x:Name="ProfileLevelText" Foreground="#EAD0BF" FontSize="22" FontWeight="Bold" Margin="0,0,0,2"/>
                                    <TextBlock x:Name="ProfileXpText" Foreground="#D7B8BC" FontSize="18" Margin="0,0,0,4"/>
                                    <TextBlock x:Name="ProfileStreakText" Foreground="#F1C98E" FontSize="18" FontWeight="Bold" Margin="0,2,0,0"/>
                                    <TextBlock x:Name="ProfileTodayText" Foreground="#D8EAF8" FontSize="16" Margin="0,2,0,0"/>
                                </StackPanel>
                            </Grid>
                            <ProgressBar x:Name="ProfileXpProgress" Margin="0,10,0,0" Height="22" Minimum="0"/>
                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="190"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="210"/>
                                </Grid.ColumnDefinitions>
                                <Button x:Name="PrestigeButton"
                                        Grid.Column="0"
                                        Style="{StaticResource PrestigeButtonStyle}"
                                        Width="190"
                                        Height="44"
                                        Content="Престиж"
                                        Click="PrestigeButton_Click"/>
                                <Button x:Name="OpenQuestsButton"
                                        Grid.Column="2"
                                        Background="#356F8E"
                                        Foreground="#F2FAFF"
                                        Width="210"
                                        Height="44"
                                        Content="Открыть задания"
                                        Click="OpenQuestsButton_Click"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#C82A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="AchievementsHeaderText" Text="Достижения" Foreground="#EDF7FF" FontWeight="Bold" FontSize="26"/>
                                <ListBox x:Name="AchievementsList"
                                          Grid.Row="1"
                                          Margin="0,10,0,0"
                                          Background="Transparent"
                                          Foreground="#EAD0BF"
                                          BorderThickness="0"
                                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                          ScrollViewer.CanContentScroll="True"
                                           VirtualizingPanel.IsVirtualizing="True"
                                           VirtualizingPanel.VirtualizationMode="Recycling"
                                           ItemContainerStyle="{StaticResource AchievementItemStyle}"
                                           ScrollViewer.VerticalScrollBarVisibility="Auto">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="44"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Grid.Column="0"
                                                        Width="40"
                                                        Height="40"
                                                        CornerRadius="20"
                                                        BorderBrush="#8AAAC0"
                                                        BorderThickness="1"
                                                        Background="#C63A5468">
                                                    <TextBlock x:Name="AchievementGlyph"
                                                               Text="○"
                                                               FontSize="24"
                                                               FontWeight="Bold"
                                                               Foreground="#D6E8F5"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="#F2FAFF"
                                                               FontWeight="Bold"
                                                               FontSize="20"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Description}"
                                                               Foreground="#D2E3EF"
                                                               FontSize="15"
                                                               Margin="0,2,0,0"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                            <DataTemplate.Triggers>
                                                <DataTrigger Binding="{Binding IsUnlocked}" Value="True">
                                                    <Setter TargetName="AchievementGlyph" Property="Text" Value="✔"/>
                                                    <Setter TargetName="AchievementGlyph" Property="Foreground" Value="#82EDB9"/>
                                                </DataTrigger>
                                            </DataTemplate.Triggers>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Border>

                        <Border Grid.Column="2" Background="#C82A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                            <StackPanel>
                                <TextBlock x:Name="RecentStreamsHeaderText"
                                           Text="Последние просмотренные"
                                           Foreground="#EDF7FF"
                                           FontWeight="Bold"
                                           FontSize="22"/>
                                <ListBox x:Name="RecentStreamsList"
                                         Margin="0,8,0,0"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         Foreground="#EAD0BF"
                                         FontSize="18"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.CanContentScroll="True"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ItemContainerStyle="{StaticResource VideoItemStyle}"
                                         SelectionChanged="RecentStreamsList_SelectionChanged">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <Border Width="120"
                                                        Height="68"
                                                        CornerRadius="8"
                                                        Background="#C334485A"
                                                        ClipToBounds="True"
                                                        VerticalAlignment="Top">
                                                    <Image Source="{Binding ThumbnailUrl}" Stretch="UniformToFill"/>
                                                </Border>

                                                <StackPanel Grid.Column="2">
                                                    <TextBlock Text="{Binding Title}"
                                                               Foreground="#F2FAFF"
                                                               FontWeight="Bold"
                                                               FontSize="16"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding LastViewedText}"
                                                               Foreground="#C3DBEA"
                                                               FontSize="13"
                                                               Margin="0,3,0,0"
                                                               TextWrapping="Wrap"/>
                                                </StackPanel>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>

            <Border x:Name="QuestsPanel"
                    Grid.Row="4"
                    Grid.RowSpan="3"
                    Padding="14"
                    CornerRadius="18"
                    Background="#CC213241"
                    BorderBrush="#5F8099"
                    BorderThickness="1"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="QuestsPageHeaderText"
                               Grid.Row="0"
                               Text="Задания"
                               Foreground="#EDF7FF"
                               FontSize="30"
                               FontWeight="Bold"/>
                    <TextBlock x:Name="QuestsSummaryText"
                               Grid.Row="4"
                               Foreground="#CDE2F0"
                               FontSize="15"
                               TextWrapping="Wrap"/>

                    <Button x:Name="BackToProfileButton"
                            Grid.Row="2"
                            Width="190"
                            Height="40"
                            HorizontalAlignment="Left"
                            Content="Назад в профиль"
                            Click="BackToProfileButton_Click"/>

                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#C82A3D4E" BorderBrush="#6887A0" BorderThickness="1" CornerRadius="14" Padding="12">
                            <StackPanel>
                                <TextBlock x:Name="QuestsDailyHeaderText" Text="Ежедневные задания" Foreground="#EDF7FF" FontWeight="Bold" FontSize="24"/>
                                <TextBlock x:Name="QuestsDailyResetText"
                                           Margin="0,4,0,0"
                                           Text="Обновление через: --:--:--"
                                           Foreground="#A8D8F2"
                                           FontSize="13"
                                           FontWeight="SemiBold"/>
                                <ListBox x:Name="QuestsDailyList"
                                         Margin="0,10,0,0"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                                         ItemContainerStyle="{StaticResource QuestItemStyle}">
                                    <ListBox.Resources>
                                        <Style TargetType="ScrollBar" BasedOn="{StaticResource UnifiedScrollBarStyle}"/>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="24"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="{Binding StatusGlyph}" Foreground="{Binding StatusColor}" FontSize="16" VerticalAlignment="Top"/>
                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock Text="{Binding Title}" Foreground="#F4FBFF" FontWeight="Bold" FontSize="16"/>
