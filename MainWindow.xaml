                                            </UniformGrid>

                                            <Button x:Name="ResetBindsButton"
                                                    Margin="0,12,0,0"
                                                    Width="260"
                                                    MinHeight="42"
                                                    Content="Сбросить бинды по умолчанию"
                                                    Click="ResetBindsButton_Click"/>
                                        </StackPanel>
                                    </Border>
                                    </StackPanel>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                    <TextBlock x:Name="SettingsCreatorText"
                               Grid.Row="2"
                               Margin="0,0,6,4"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               Text="dragloner"
                               Foreground="#88AFC5D7"
                               FontSize="9"
                               FontWeight="SemiBold"/>
                </Grid>
            </Border>

            <TextBlock x:Name="StatusText" Grid.Row="8" Visibility="Collapsed"/>

