                                                        Margin="8,0,8,0"
                                                        Padding="8,4"
                                                        CornerRadius="10"
                                                        BorderBrush="#85B3CC"
                                                        BorderThickness="1"
                                                        Background="#C620394A">
                                                    <TextBlock x:Name="LaughBindValueText"
                                                               Text="U"
                                                               Foreground="#F3FBFF"
                                                               FontWeight="Bold"
                                                               FontSize="14"
                                                               HorizontalAlignment="Center"/>
