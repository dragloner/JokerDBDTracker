                                                <Button x:Name="AssignFx7BindButton" Margin="6,6,6,6" Padding="8,5" FontSize="12" Tag="fx7" Click="AssignBindButton_Click" Content="7 [7]"/>
                                                <Button x:Name="AssignFx8BindButton" Margin="6,6,6,6" Padding="8,5" FontSize="12" Tag="fx8" Click="AssignBindButton_Click" Content="8 [8]"/>
                                                <Button x:Name="AssignFx9BindButton" Margin="6,6,6,6" Padding="8,5" FontSize="12" Tag="fx9" Click="AssignBindButton_Click" Content="9 [9]"/>
                                                <Button x:Name="AssignFx10BindButton" Margin="6,6,0,6" Padding="8,5" FontSize="12" Tag="fx10" Click="AssignBindButton_Click" Content="10 [0]"/>
                                                <Button x:Name="AssignFx11BindButton" Margin="0,6,6,0" Padding="8,5" FontSize="12" Tag="fx11" Click="AssignBindButton_Click" Content="11 [Q]"/>
