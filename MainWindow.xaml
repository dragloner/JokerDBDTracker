                                                <Button x:Name="AssignFx13BindButton" Margin="6,6,6,0" Padding="8,5" FontSize="12" Tag="fx13" Click="AssignBindButton_Click" Content="13 [E]"/>
                                                <Button x:Name="AssignFx14BindButton" Margin="6,6,6,0" Padding="8,5" FontSize="12" Tag="fx14" Click="AssignBindButton_Click" Content="14 [R]"/>
